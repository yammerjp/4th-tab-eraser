{
  "manifest_version": 2,
  "name": "4th Tab Eraser",
  "version": "1.0.0",
  "description": "タブとウィンドウの数を自動的に管理するFirefox拡張機能",
  "applications": {
    "gecko": {
      "id": "4th-tab-eraser@example.com"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
} 